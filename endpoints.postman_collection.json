			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Set Token to Variable Colletion\", function () {",
							"    pm.response.to.have.status(200);",
							"    var json = pm.response.json();",
							"    pm.collectionVariables.set(\"access_token\", json.token);",
							"",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
